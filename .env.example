# ==============================================
# Backend Authentication Service Configuration
# ==============================================
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/auth_service  (Change it for each developer use ur own)
MONGODB_TEST_URI=mongodb://localhost:27017/auth_service_test

# JWT Configuration - IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-at-least-32-characters for each developer
JWT_EXPIRES_IN=24h

# OTP Configuration
OTP_EXPIRY_MINUTES=10

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=3

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Application Metadata
APP_NAME=Backend Authentication Service
APP_VERSION=1.0.0